<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.AddItemController"
            prefHeight="200.0" prefWidth="230.0">
    <content>
        <GridPane hgap="10" vgap="10" >
            <TextField fx:id="nameField" promptText="Name" GridPane.rowIndex="0"/>
            <ComboBox fx:id="categoryBox" promptText="Category" GridPane.rowIndex="1" />
            <TextField fx:id="priceField" promptText="Price" GridPane.rowIndex="2" maxWidth="100"/>
            <CheckBox fx:id="currencyChoice" GridPane.rowIndex="2" translateX="120"/>
            <Label text="SEK" GridPane.rowIndex="2" minWidth="10" translateX="140"/>
            <DatePicker fx:id="datePicker" promptText="Date of purchase" GridPane.rowIndex="3"/>
            <ComboBox fx:id="buyerBox" promptText="Who made the purchase?" GridPane.rowIndex="4"/>
        </GridPane>
    </content>


</DialogPane>
